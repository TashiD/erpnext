 "html": "<div>\n    {% if doc.single_party_multiple_payments %}\n\n    <div class=\"page-break\">\n        <div id=\"header-html\" class=\"hidden-pdf\">\n            {%- if letter_head and not no_letterhead -%}\n            <div class=\"letter-head\">\n                {{ letter_head }}\n            </div>\n            {%- endif -%}\n        </div>\n\n        <div id=\"footer-html\" class=\"visible-pdf\">\n            {% if not no_letterhead and footer %}\n            <div class=\"letter-head-footer\">\n                {{ footer }}\n            </div>\n            {% endif %}\n\n            <p class=\"text-center small page-number visible-pdf\">\n                {{ _(\"Page {0} of {1}\").format('<span class=\"page\"></span>', '<span class=\"topage\"></span>') }}\n            </p>\n        </div>\n        <div class=\"print-heading\">\n            <div style=\"text-align: center;\">\n                <h3>DIRECT PAYMENT</h3>\n                <h5><u>\n                        {{doc.branch}}\n                    </u></h5>\n            </div>\n\n            <br />\n            <table class=\"table1\" style=\"margin-top: 1px; text-align:justify;font-size:small; width:100% \">\n                <tr>\n                    <td><strong>Party:</strong></td>\n                    <td>{{ doc.party }}</td>\n                    <td></td>\n                    <td></td>\n                </tr>\n                <tr>\n                    <td><strong>Date:</strong></td>\n                    <td>{{ frappe.utils.formatdate(doc.posting_date) }}</td>\n                    <td><strong>Invoice Date:</strong></td>\n                    <td>{{doc.invoice_date}}</td>\n                </tr>\n                <tr>\n                    <td><strong>Cost Center:</strong></td>\n                    <td>{{doc.cost_center}}</td>\n                    <td><strong>Invoice No:</strong></td>\n                    <td>{{ doc.invoice_no }}</td>\n                </tr>\n                <tr>\n                    <td><strong>Payment Type:</strong></td>\n                    <td>{{ doc.payment_type }}</td>\n                    <td><strong>Reference:</strong></td>\n                    <td>{{ doc.name}} </td>\n                </tr>\n            </table>\n            <table class=\"table table-bordered\" style=\"margin-top: 15px;\">\n                <tbody>\n                    {% set slno = 0 %}\n                    <tr>\n                        <th>Sr</th>\n                        <th>Account</th>\n                        <th>Party Type</th>\n                        <th>Party</th>\n                        <th>Cost Center</>\n                        <th class=\"text-right\">Debit</th>\n                        <th class=\"text-right\">Credit</th>\n                    </tr>\n                    {% set tot_debit = [0] %}\n                    {% set tot_credit = [0] %}\n                    {%- for row in frappe.get_list(doctype=\"GL Entry\",fields = [\"account\", \"party_type\", \"party\",\n                    \"cost_center\", \"debit\", \"credit\"],filters = {\"voucher_no\":doc.name},order_by = \"-debit\") -%}\n                    <tr>\n                        {% set slno = slno + 1 %}\n                        {% if tot_debit.append(tot_debit.pop() + row.debit) %}{% endif %}\n                        {% if tot_credit.append(tot_credit.pop() + row.credit) %}{% endif %}\n                        <td style=\"width: 3%;\">{{ loop.index }}</td>\n                        <td>{{ row.account }}</td>\n                        <td>{{ row.party_type or \"\" }}</td>\n                        <td>{{row.party or \"\"}}</td>\n                        <td>{{row.cost_center or \"\"}}</td>\n                        <td class=\"text-right\">{{ frappe.format_value(row.debit, {\"fieldtype\":\"Currency\"},\n                            currency=doc.currency) }}</td>\n                        <td class=\"text-right\">{{ frappe.format_value(row.credit, {\"fieldtype\":\"Currency\"},\n                            currency=doc.currency) }}</td>\n                    </tr>\n                    <!-- {%- endfor -%} -->\n                </tbody>\n            </table>\n            <table class=\"table1\" style=\"margin-top: 1px; text-align:justify;font-size:small; width:100% \">\n                <tr>\n                    <td><strong>Cheque No:</strong></td>\n                    <td>{{ doc.cheque_no }}</td>\n                    <td><strong>Total Debit:</strong></td>\n                    {% if doc.payment_type == \"Payment\" %}\n                    <td>{{ doc.amount }}</td>\n                    {% else %}\n                    <td>{{ doc.net_amount + doc.tds_amount }}</td>\n                    {% endif %}\n                </tr>\n                <tr>\n                    <td><strong>Cheque Date:</strong></td>\n                    <td>{{ doc.cheque_date }}</td>\n                    <td><strong>Total Credit:</strong></td>\n                    {% if doc.payment_type == \"Receive\" %}\n                    <td>{{ doc.net_amount + doc.tds_amount }}</td>\n                    {% else %}\n                    <td>{{ doc.amount }}</td>\n                    {% endif %}\n                </tr>\n\n            </table>\n            <div class=\"row\" style=\"margin-top: 15px;\">\n                <b>\n                    <lable>Narration<lable>:\n                </b>\n                {{doc.remarks}}\n            </div>\n            <div class=\"row section-break\" style=\"margin-top: 60px;\">\n                <div class=\"col-xs-6 column-break\" style=\"text-align: left;\">Prepared By</div>\n                <div class=\"col-xs-6 column-break\" style=\"text-align: center;\">Verified By</div>\n            </div>\n            <div class=\"row section-break\" style=\"margin-top: 60px;\">\n                <div class=\"col-xs-6 column-break\" style=\"text-align: left;\">Approved By</div>\n                <div class=\"col-xs-6 column-break\" style=\"text-align: center;\">Received By</div>\n            </div>\n            <div class=\"printedby\">This print is system generated and should be considered VALID only with appropriate\n                seal and/or signature. <br> Printed by {{ frappe.user }} on {{ frappe.utils.nowdate() }} at {{\n                frappe.utils.nowtime() }}</div>\n\n    {% else %}\n            <div class=\"page-break\">\n                <div id=\"header-html\" class=\"hidden-pdf\">\n                    {%- if letter_head and not no_letterhead -%}\n                    <div class=\"letter-head\">\n                        {{ letter_head }}\n                    </div>\n                    {%- endif -%}\n                </div>\n\n                <div id=\"footer-html\" class=\"visible-pdf\">\n                    {% if not no_letterhead and footer %}\n                    <div class=\"letter-head-footer\">\n                        {{ footer }}\n                    </div>\n                    {% endif %}\n\n                    <p class=\"text-center small page-number visible-pdf\">\n                        {{ _(\"Page {0} of {1}\").format('<span class=\"page\"></span>', '<span class=\"topage\"></span>') }}\n                    </p>\n                </div>\n                <div class=\"print-heading\">\n                    <div style=\"text-align: center;\">\n                        <h3>DIRECT PAYMENT</h3>\n                        <h5><u>\n                                {{doc.branch}}\n                            </u></h5>\n                    </div>\n\n                    <br />\n                    <table class=\"table1\" style=\"margin-top: 1px; text-align:justify;font-size:small; width:100% \">\n                        \n                        <tr>\n                            <td><strong>Date:</strong></td>\n                            <td>{{ frappe.utils.formatdate(doc.posting_date) }}</td>\n                            <td><strong>Invoice Date:</strong></td>\n                            <td>{{doc.invoice_date}}</td>\n                        </tr>\n                        <tr>\n                            <td><strong>Cost Center:</strong></td>\n                            <td>{{doc.cost_center}}</td>\n                            <td><strong>Invoice No:</strong></td>\n                            <td>{{ doc.invoice_no }}</td>\n                        </tr>\n                        <tr>\n                            <td><strong>Payment Type:</strong></td>\n                            <td>{{ doc.payment_type }}</td>\n                            <td><strong>Reference:</strong></td>\n                            <td>{{ doc.name}} </td>\n                        </tr>\n                        <tr>\n                            <td><strong>Cheque No:</strong></td>\n                            <td>{{ doc.cheque_no }}</td>\n                            <td><strong>Cheque Date:</strong></td>\n                            <td>{{ doc.cheque_date }}</td>\n                        </tr>\n                    </table>\n                    <table class=\"table table-bordered\" style=\"margin-top: 15px;\">\n                        <tbody>\n                            <tr>\n                                <th><b>Account</b></th>\n                                <th><b>Debit</b></th>\n                                <th><b>Credit</b></th>\n                            </tr>\n                        {% if doc.payment_type == \"Payment\" %}\n                            <tr>\n                                <td>{{ doc.tds_account }}</td>\n                                <td style=\"text-align: right\">0</td>\n                                <td style=\"text-align: right\">{{ frappe.format_value(doc.tds_amount, {\"fieldtype\":\"Currency\"})}}</td>\n                            </tr>\n                        {% endif %}\n                        <tr>\n                            <td>{{ doc.credit_account }}</td>\n                            <td style=\"text-align: right\">0</td>\n                            <td style=\"text-align: right\">{{ frappe.format_value(doc.net_amount, {\"fieldtype\":\"Currency\"})}}</td>\n                        </tr>\n                        <tr>\n                            <td>{{ doc.debit_account }}</td>\n                            <td style=\"text-align: right\">{{ frappe.format_value(doc.taxable_amount, {\"fieldtype\":\"Currency\"})}}</td>\n                            <td style=\"text-align: right\">0</td>\n                        </tr>                             \n                        </tbody>\n                    </table>\n                    <p>\n                        <strong>Gross Amount(Nu):</strong> {{ frappe.format_value(doc.amount, {\"fieldtype\":\"Currency\"})}}\n                    </p>\n                    <div class=\"row\" style=\"margin-top: 15px;\">\n                        <b>\n                            <lable>Narration<lable>:\n                        </b>\n                        {{doc.remarks}}\n                    </div>\n                    <div class=\"row section-break\" style=\"margin-top: 60px;\">\n                        <div class=\"col-xs-6 column-break\" style=\"text-align: left;\">Prepared By</div>\n                        <div class=\"col-xs-6 column-break\" style=\"text-align: center;\">Verified By</div>\n                    </div>\n                    <div class=\"row section-break\" style=\"margin-top: 60px;\">\n                        <div class=\"col-xs-6 column-break\" style=\"text-align: left;\">Approved By</div>\n                        <div class=\"col-xs-6 column-break\" style=\"text-align: center;\">Received By</div>\n                    </div>\n                    <div class=\"printedby\">This print is system generated and should be considered VALID only with\n                        appropriate seal and/or signature. <br> Printed by {{ frappe.user }} on {{\n                        frappe.utils.nowdate() }} at {{ frappe.utils.nowtime() }}</div>\n\n                    <div class=\"page-break\"></div>\n                    {% endif %}\n    </div>", 
